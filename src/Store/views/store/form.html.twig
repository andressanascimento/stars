{% if message is not null %}
    <div class="alert {{message['status']}}" role="alert">{{message['message']}}</div>
{% endif %}
<form method="post" name="form" id="modal-form" action="{{action}}">
    <div class="form-group {% if input_errors['name'] is not null %} has-error {% endif %}">
        <label for="name">Nome</label>
        <input type="text" name="name" class="form-control" placeholder="Nome" 
        value="{% if model is not null %}{{model.name}}{% endif %}">
        {% if input_errors['name'] is not null %}
            {% for error in input_errors['name'] %}
                <span class="help-block">{{error}}</span>
            {% endfor %}
        {% endif %}
    </div>
    <div class="form-group {% if input_errors['cnpj'] is not null %} has-error {% endif %}">
        <label for="cnpj">CNPJ</label>
        <input type="text" name="cnpj" class="form-control" placeholder="Ex: 43.871.819/0001-37" 
        value="{% if model is not null %}{{model.cnpj}}{% endif %}">
        {% if input_errors['cnpj'] is not null %}
            {% for error in input_errors['cnpj'] %}
                <span class="help-block">{{error}}</span>
            {% endfor %}
        {% endif %}
    </div>
    <div class="form-group {% if input_errors['state'] is not null %} has-error {% endif %}">
        <label for="state">Estado</label>
        <select name="state_id" class="form-control">
            <option>Selecione</option>
            {% for state in states %}
                <option value="{{state.id}}" {% if model.stateId == state.id %}selected{% endif %}>{{state.name}}</option>
            {% endfor %}
        </select>
        {% if input_errors['state'] is not null %}
            {% for error in input_errors['state'] %}
                <span class="help-block">{{error}}</span>
            {% endfor %}
        {% endif %}
    </div>
    {% if model is not null %}
        <input type="hidden" name="id" value={{model.id}} />
    {% endif %}
    <button type="submit" class="btn btn-primary">Enviar</button>
</form>