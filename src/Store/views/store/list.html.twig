{% if message is not null %}
    <br/>
    <div class="alert {{message['status']}}" role="alert" id="alert-message">
        <button type="button" class="close" data-dismiss="alert">x</button>
        {{message['message']}}</div>
{% endif %}
<table class="table table-hover table-condensed" style="margin-top:5px">
    <thead>
        <tr>
            <th style="width: 30px"></th>
            <th>Nome</th>
            <th class="col-md-2">CNPJ</th>
            <th class="col-md-2">Estado</th>
            <th class="col-md-1">Editar</th>
        </tr>
    </thead>
    <tbody>
    {% for store in stores %}
        <tr>
            <td><input type="checkbox" value={{store.id}} class="checkbox-delete"></td>
            <td>{{store.name}}</td>
            <td>{{store.cnpj}}</td>
            <td>{{store.state}}</td>
            <td><button class="btn btn-primary btn-modal" modal-title="Atualizar Loja"
                        modal-url="/store/store/update/{{store.id}}">Editar</button></td>
        </tr>
    {% endfor %}
    </tbody>
</table>