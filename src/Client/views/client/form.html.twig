{% if message is not null %}
    <div class="alert {{message['status']}}" role="alert">{{message['message']}}</div>
{% endif %}
<form method="post" name="form" id="modal-form" action="{{action}}">
    <div class="form-group {% if input_errors['name'] is not null %} has-error {% endif %}">
        <label for="name">Nome</label>
        <input type="text" name="name" class="form-control" placeholder="Nome" 
        value="{% if model is not null %}{{model.name}}{% endif %}">
        {% if input_errors['name'] is not null %}
            {% for error in input_errors['name'] %}
                <span class="help-block">{{error}}</span>
            {% endfor %}
        {% endif %}
    </div>
    <div class="form-group {% if input_errors['age'] is not null %} has-error {% endif %}">
        <label for="age">Idade</label>
        <input type="text" name="age" class="form-control" placeholder="Idade" 
        value="{% if model is not null %}{{model.age}}{% endif %}">
        {% if input_errors['age'] is not null %}
            {% for error in input_errors['age'] %}
                <span class="help-block">{{error}}</span>
            {% endfor %}
        {% endif %}
    </div>
    {% if model is not null %}
        <input type="hidden" name="id" value={{model.id}} />
    {% endif %}
    <button type="submit" class="btn btn-primary">Enviar</button>
</form>