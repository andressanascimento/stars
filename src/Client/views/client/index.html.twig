{% extends 'layout.html.twig' %}
{% block content %}
    <div class="col-md-12">
        <ol class="breadcrumb">
            <li><a href="#">Home</a></li>
            <li class="active">Clientes</li>
        </ol>
        <button class="btn btn-danger btn-delete pull-right" url="/client/client/delete" list-grid="#grid" style="margin-left: 10px;">Deletar</button>
        <button class="btn btn-primary btn-modal pull-right" modal-title="Novo Cliente" modal-url="/client/client/new">Novo</button>
    </div>
    <div class="col-md-3">
        <div class="panel panel-primary"> 
            <div class="panel-heading"> 
                <h3 class="panel-title">Pesquisar</h3> 
            </div> 
            <div class="panel-body">
                <form method="post" name="search" id="search-form" list-grid="#grid" action="/client/client/search">
                    <div class="form-group">
                        <input type="text" name="name" class="form-control" id="name" placeholder="Nome">
                    </div>
                    <button type="submit" class="btn btn-primary search-btn">Enviar</button>
                </form> 
            </div> 
        </div>


    </div>
    <div class="col-md-9" id="grid" url="/client/client/list">
        <table class="table table-hover table-condensed" style="margin-top:5px">
            <thead>
                <tr>
                    <th style="width: 30px"></th>
                    <th>Nome</th>
                    <th class="col-md-2">Idade</th>
                    <th class="col-md-1">Editar</th>
                </tr>
            </thead>
            <tbody>
            {% for client in clients %}
                <tr>
                    <td><input type="checkbox" value={{client.id}} class="checkbox-delete"></td>
                    <td>{{client.name}}</td>
                    <td>{{client.age}}</td>
                    <td><button class="btn btn-primary btn-modal" modal-title="Atualizar Cliente"
                        modal-url="/client/client/update/{{client.id}}">Editar</button></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock content %}
